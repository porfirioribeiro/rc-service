{
  "name": "rc-service",
  "version": "0.0.30",
  "description": "React Context Services",
  "main": "dist/index.js",
  "module": "dist/index.m.js",
  "umd:main": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "author": "Porfirio Ribeiro<porfirioribeiro@gmail.com>",
  "repository": "https://github.com/porfirioribeiro/rc-service",
  "license": "MIT",
  "files": [
    "dist",
    "es6",
    "src"
  ],
  "mangle": {
    "regex": "^(instances|onServiceUpdate|getBitMaskForServices|serviceBitMaskMap|observedBits|lastNode|initService|updateService|needsUpdate|renderChild|prevInject)$"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^9.1.4",
    "@types/node": "^9.6.7",
    "@types/jest": "^24.0.18",
    "@types/react": "^16.9.2",
    "jest": "^24.9.0",
    "microbundle": "^0.11.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.6.2"
  },
  "peerDependencies": {
    "react": "^16.4.2"
  },
  "scripts": {
    "clean": "rimraf dist es6 .rpt2_cache sample/.cache sample/dist",
    "test": "jest",
    "build:es6": "tsc -p tsconfig.es6.json",
    "build:mb": "yarn build:mb:main && yarn build:mb:plugins",
    "build:mb:main": "microbundle --target browser",
    "build:mb:plugins": "microbundle -i src/plugins.ts -o dist/plugins.js",
    "build": "yarn build:es6 && yarn build:mb",
    "dev": "tsc -p tsconfig.es6.json -w",
    "prepublish": "yarn clean && yarn build"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/setupjest.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  }
}
