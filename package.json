{
  "name": "rc-service",
  "version": "0.0.23",
  "description": "React Context Services",
  "main": "dist/index.js",
  "module": "dist/index.m.js",
  "umd:main": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "author": "Porfirio Ribeiro<porfirioribeiro@gmail.com>",
  "repository": "https://github.com/porfirioribeiro/rc-service",
  "license": "MIT",
  "files": [
    "dist",
    "es6",
    "src"
  ],
  "mangle": {
    "regex": "^(instances|onServiceUpdate|getBitMaskForServices|serviceBitMaskMap|observedBits|lastNode|initService|updateService|needsUpdate|renderChild|prevInject)$"
  },
  "devDependencies": {
    "@types/jest": "^23.3.5",
    "@types/react": "^16.4.16",
    "@types/react-dom": "^16.0.9",
    "jest": "^23.6.0",
    "jest-dom": "^2.0.4",
    "microbundle": "^0.6.0",
    "parcel-bundler": "^1.10.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-testing-library": "^5.2.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.4",
    "typescript": "^3.1.1"
  },
  "peerDependencies": {
    "react": "^16.4.2"
  },
  "scripts": {
    "clean": "rimraf dist es6 .cache .rpt2_cache sample/react/dist",
    "test": "jest",
    "build:es6": "tsc -p tsconfig.es6.json",
    "build:mb": "yarn build:mb:main && yarn build:mb:plugins && yarn build:mb:serviceCache",
    "build:mb:main": "microbundle --target browser",
    "build:mb:plugins": "microbundle -i src/plugins.ts -o dist/plugins.js",
    "build:mb:serviceCache": "microbundle -i src/serviceCache/index.ts -o dist/serviceCache.js",
    "build": "yarn build:es6 && yarn build:mb",
    "dev": "microbundle -w",
    "sample": "parcel -d sample/react/dist sample/react/index.html",
    "prepublish": "yarn clean && yarn build"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/setupjest.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  }
}
