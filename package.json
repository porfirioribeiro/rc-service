{
  "name": "rc-service",
  "version": "0.0.18",
  "description": "React Context Services",
  "main": "dist/index.js",
  "module": "dist/index.m.js",
  "umd:main": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "author": "Porfirio Ribeiro<porfirioribeiro@gmail.com>",
  "repository": "https://github.com/porfirioribeiro/rc-service",
  "license": "MIT",
  "files": [
    "dist",
    "es6",
    "src"
  ],
  "mangle": {
    "regex": "^(instances|onServiceUpdate|getBitMaskForServices|serviceBitMaskMap|observedBits|lastNode|initService|updateService|needsUpdate|renderChild|prevInject)$"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/react": "^16.4.13",
    "@types/react-dom": "^16.0.7",
    "jest": "^23.5.0",
    "jest-dom": "^1.12.0",
    "microbundle": "^0.6.0",
    "parcel-bundler": "^1.9.7",
    "react": "^16.5.0",
    "react-dom": "^16.5.0",
    "react-testing-library": "^5.0.1",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.1.4",
    "typescript": "^3.0.3"
  },
  "peerDependencies": {
    "react": "^16.4.2"
  },
  "scripts": {
    "clean": "rimraf dist es6 .cache .rpt2_cache sample/react/dist",
    "test": "jest",
    "build:es6": "tsc -p tsconfig.es6.json",
    "build:mb": "microbundle --target browser && microbundle -i src/plugins.ts -o dist/plugins.js",
    "build": "yarn build:es6 && yarn build:mb",
    "dev": "microbundle -w",
    "sample": "parcel -d sample/react/dist sample/react/index.html",
    "prepublish": "yarn clean && yarn build"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/setupjest.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  }
}
