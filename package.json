{
  "name": "rc-service",
  "version": "0.1.0-alpha.2",
  "description": "React Context Services",
  "main": "dist/index.js",
  "module": "dist/index.m.js",
  "umd:main": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "author": "Porfirio Ribeiro<porfirioribeiro@gmail.com>",
  "repository": "https://github.com/porfirioribeiro/rc-service",
  "license": "MIT",
  "files": [
    "dist",
    "es6",
    "src"
  ],
  "mangle": {
    "regex": "^(instances|onServiceUpdate|initService|updateService|renderChild|prevInject)$"
  },
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "@types/react": "^16.8.2",
    "jest": "^24.1.0",
    "jest-dom": "^3.0.2",
    "microbundle": "^0.9.0",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-testing-library": "^5.5.3",
    "rimraf": "^2.6.3",
    "ts-jest": "^23.10.5",
    "typescript": "^3.3.3"
  },
  "peerDependencies": {
    "react": "16.7.0-alpha.2"
  },
  "scripts": {
    "clean": "rimraf dist es6 .rts2_cache* sample/.cache sample/dist",
    "test": "jest",
    "build:es6": "tsc -p tsconfig.es6.json",
    "build:mb": "yarn build:mb:main && yarn build:mb:plugins",
    "build:mb:main": "microbundle --target browser",
    "build:mb:plugins": "microbundle -i src/plugins.ts -o dist/plugins.js",
    "build": "yarn build:es6 && yarn build:mb",
    "update": "yarn build:es6 --outDir sample/node_modules/rc-service/es6",
    "dev": "tsc -p tsconfig.es6.json -w",
    "prepublish": "yarn clean && yarn build"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/setupjest.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  }
}
